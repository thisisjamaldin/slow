<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_grey">

    <TextView
        android:id="@+id/saved_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Save the video successfully"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_close"
        android:padding="12dp"
        android:layout_margin="4dp"
        android:layout_height="40dp"/>

    <LinearLayout
        android:id="@+id/starts_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/saved_txt">

        <ImageView
            android:id="@+id/star_1"
            android:layout_width="0dp"
            android:paddingVertical="12dp"
            android:src="@drawable/ic_star"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/star_2"
            android:layout_width="0dp"
            android:src="@drawable/ic_star"
            android:paddingVertical="12dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/star_3"
            android:layout_width="0dp"
            android:src="@drawable/ic_star"
            android:paddingVertical="12dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/star_4"
            android:layout_width="0dp"
            android:src="@drawable/ic_star"
            android:paddingVertical="12dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/star_5"
            android:layout_width="0dp"
            android:src="@drawable/ic_star"
            android:paddingVertical="12dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/saved_txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/starts_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:text="Please give us five stars, thank you"/>

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_blue"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@id/saved_txt_2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:layout_margin="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>